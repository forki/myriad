<Window x:Class="Myriad.Explorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Myriad.Explorer"
        mc:Ignorable="d" 
        Title="Myriad Explorer" Height="550" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <local:NavigationControl x:Name="NavigationControl"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <local:ContextControl Grid.Column="0" x:Name="ContextControl" VerticalAlignment="Top"/>            

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"/>

            <DataGrid Grid.Column="2" VerticalContentAlignment="Top" x:Name="ResultView" ItemsSource="{Binding}" IsReadOnly="True" MouseDoubleClick="OnResultsDoubleClick" SelectionMode="Single" />
            
        </Grid>
    </Grid>
</Window>
